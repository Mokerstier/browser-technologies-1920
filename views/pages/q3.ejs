<%- include('../partials/head.ejs') %>
<main>
    <form action="/q4" method="POST">
        <progress value="6" max="9"></progress>

        <input type="hidden" name="state" value="q4">
        <input type="hidden" name="fname" value="<%= user.fname %>">
        <input type="hidden" name="lname" value="<%= user.lname %>">
        <input type="hidden" id="uuid" name="uuid" value="<%= user.uuid %>">
        <% if(Array.isArray(user.favdoc)) {%>
        <% user.favdoc.map(doc =>{ %>
        <input type="hidden" name="favdoc" value="<%= doc %>">
        <% })} else { %>
        <input type="hidden" name="favdoc" value="<%= user.favdoc %>">
        <% } %>
        <% if(Array.isArray(user.favcourse)) {%>
        <% user.favcourse.map(doc =>{ %>
        <input type="hidden" name="favcourse" value="<%= doc %>">
        <% })} else { %>
        <input type="hidden" name="favcourse" value="<%= user.favcourse %>">
        <% } %>


        <fieldset>
            <legend>Vraag 3</legend>
            <p>Wat had in deze minor had je liever anders gezien?</p>


            <label for="feedback">Antwoord:
                <small>Als je het niet weet plaats dan: Geen verbetering</small>
                <textarea name="feedback" id="feedback" cols="30" rows="10"><%= user.feedback%></textarea>
            </label>
        </fieldset>
        <a href="/q2/<%= user.uuid %>">Terug</a><button type="submit" >Verder</button>
    </form>

</main>


